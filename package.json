{
  "name": "monorepo-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "client",
    "service"
  ],
  "scripts": {
    "install:client": "cd client && npm install",
    "install:service": "cd service && npm install",
    "dev:client": "cd client && npm run dev",
    "dev:service": "cd service && npm run dev",
    "test:client": "cd client && npm test",
    "test:service": "cd service && npm test",
    "lint:client": "cd client && npm run lint",
    "lint:service": "cd service && npm run lint",
    "format:client": "cd client && npm run format",
    "format:service": "cd service && npm run format",
    "prepare": "husky"
  },
  "lint-staged": {
    "client/**/*.{ts,tsx}": [
      "cd client && npm run lint:fix",
      "cd client && npm run format"
    ],
    "service/**/*.ts": [
      "cd service && npm run lint:fix",
      "cd service && npm run format"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.1.7",
    "lint-staged": "15.5.2",
    "prettier": "3.2.5"
  }
}
